<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E6E6FA">

    <!-- News / Media -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNews"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="2dp"
            app:strokeColor="#FFFFFF"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:contentDescription="News Icon"
                    android:src="@drawable/news_icon1" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News Feed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Fruit Ninja -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFruit"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="2dp"
            app:strokeColor="#FFFFFF"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:src="@drawable/fruit_icon"
                    android:contentDescription="Fruit Ninja Icon" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Froot Ninja"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Wordle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWordle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="2dp"
            app:strokeColor="#FFFFFF"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:src="@drawable/wordle_icon1"
                    android:contentDescription="Wordle Icon" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wordle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>